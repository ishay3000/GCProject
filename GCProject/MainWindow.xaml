		<ItemsControl>
			<ItemsControl.ItemContainerStyle>
				<Style>
						<Setter Property="FrameworkElement.Margin" Value="5"/>
						<Setter Property="TextBlock.TextAlignment" Value="Center"/>
					</Style>
			</ItemsControl.ItemContainerStyle>
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Rows="1" Columns="3"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.Items>
				<!-- BEGIN "Scan Network" -->
				<materialDesign:Card VerticalAlignment="Center" ToolTip="Scan Network">
					<StackPanel>
					<TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="Scan Network" />
						<Image HorizontalAlignment="Stretch" Source="Resources/Images/Scroll view images/2014_security_scanning.png"></Image>
					</StackPanel>
					</materialDesign:Card>
				<!-- END "Scan Network" -->

				<!-- BEGIN "Stenography" -->
				<materialDesign:Card VerticalAlignment="Center" ToolTip="Scan Network">
					<StackPanel>
						<TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="Scan Network" />
						<Image HorizontalAlignment="Stretch" Source="Resources/Images/Scroll view images/WAV-512.png"></Image>
