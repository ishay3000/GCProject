        Title="ScrollWindow" Height="500" Width="1000" ResizeMode="NoResize">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Resources/Resource Dictionaries/CardResource.xaml"></ResourceDictionary>
				<ResourceDictionary Source="../Resources/Resource Dictionaries/ListViewCardsDictionary.xaml"></ResourceDictionary>
				<ResourceDictionary Source="../Resources/Resource Dictionaries/HorizontalListViewResource.xaml"></ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Grid>
		<ListBox Visibility="Hidden" x:Name="horizontalListBox"  SelectionMode="Extended"
		         Style="{ StaticResource ListBoxWithAutoScroll_Horizontal }">
		</ListBox>

		<local:CardScrollControl/>
	</Grid>

